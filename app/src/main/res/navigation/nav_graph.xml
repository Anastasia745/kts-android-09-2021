<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/onboarding">

    <fragment
        android:id="@+id/onboarding"
        android:name="com.example.unsplash.Onboarding"
        android:label="fragment_onboarding"
        tools:layout="@layout/fragment_onboarding" >
        <action
            android:id="@+id/action_onboarding_to_login"
            app:destination="@id/login"
            app:popUpTo="@id/onboarding"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/login"
        android:name="com.example.unsplash.Login"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_login_to_main"
            app:destination="@id/main"
            app:popUpTo="@id/onboarding"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/main"
        android:name="com.example.unsplash.Main"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main"

        app:popUpTo="@id/login"
        app:popUpToInclusive="true"/>
</navigation>